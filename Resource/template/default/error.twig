{% extends 'default_frame.twig' %}

{% set body_class = 'product_review_page' %}

{% block stylesheet %}
    <style>
        .product_review_page p{
            display: block;
            -webkit-margin-before: 1em;
            -webkit-margin-after: 1em;
            -webkit-margin-start: 0px;
            -webkit-margin-end: 0px;
        }
        @media only screen and (min-width: 768px){
            .complete_message {
                text-align: center;
            }
            .complete_message .heading01 {
                font-size: 3.2rem;
            }
        }
        .product_review_page a.btn-info {
            color: #fff;
            background-color: #525263;
            border-color: #525263;
            padding: 10px 16px;
            font-weight: bold;
            height: 44px;
            border-radius: 0;
        }
    </style>
{% endblock stylesheet %}

{% block main %}
    <h1 class="page-heading">{{ 'plugin.front.product_review.error'|trans }}</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                {% for error in app.session.flashbag.get('eccube.front.error')  %}
                <div class="message">
                    {{ error|trans|nl2br }}
                </div>
                {% endfor %}
                <div class="row no-padding">
                    <div class="btn_group col-sm-offset-4 col-sm-4">
                        <p>
                            <a href="{{ url('homepage') }}" class="btn btn-info btn-block">{{ 'plugin.front.product_review.top.page.link'|trans }}</a>
                        </p>
                    </div>
                </div>

            </div><!-- /.col -->
        </div><!-- /.row -->

    </div>
{% endblock %}
