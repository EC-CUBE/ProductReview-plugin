{% extends 'default_frame.twig' %}

{% set body_class = 'product_review_page' %}

{% block stylesheet %}
    <style>
        .product_review_page p{
            display: block;
            -webkit-margin-before: 1em;
            -webkit-margin-after: 1em;
            -webkit-margin-start: 0px;
            -webkit-margin-end: 0px;
        }
        .product_review_page .dl_table {
            margin: 0 0 16px;
        }
        .product_review_page .dl_table dt {
            margin-bottom: 5px;
        }
        .product_review_page .dl_table dt label {
            font-weight: bold;
        }
        .product_review_page .dl_table dt legend {
            border-bottom: none;
        }
        .product_review_page textarea {
            vertical-align: top;
        }
        .product_review_page #product_review_sex .radio {
            display: inline-block;
            margin-right: 10px;
        }
        .product_review_page #product_review_sex .radio input[type="radio"] {
            margin-right: 10px;
        }
        .product_review_page form dl .form-control{
            border: 1px solid #C4CCCE;
            border-radius: 3px !important;
            box-shadow: none;
            font-size: 16px;
            height: 40px;
            padding: 6px 12px;
            line-height: 1.5;
        }
        .product_review_page form dl textarea.form-control{
            border: 1px solid #C4CCCE;
            border-radius: 3px !important;
            box-shadow: none;
            font-size: 16px;
            height: 6em;
            padding: 6px 12px;
            line-height: 1.5;
        }
        .product_review_page form .btn-primary{
            color: #fff;
            background-color: #DE5D50;
            border-color: #DE5D50;
            font-size: 16px;
            padding: 10px 16px;
            font-weight: bold;
            height: 44px;
            border-radius: 0;
            margin-bottom: 20px;
        }
        .product_review_page form .btn-info {
            color: #fff;
            background-color: #525263;
            border-color: #525263;
            height: 44px;
            border-radius: 0;
        }

        @media only screen and (min-width: 768px) {
            .dl_table {
                display: table;
                width: 100%;
                border-top: 1px dotted #ccc;
            }
            .dl_table dl {
                display: table-row;
                border: 0 none;
                padding: 8px 0;
            }
            .dl_table dt {
                width: 30%;
            }
            .dl_table dt, .dl_table dd {
                display: table-cell;
                border-bottom: 1px dotted #ccc;
                padding: 16px 0;
            }
            .dl_table dd {
                padding: 16px;
                width: 70%;
            }
        }
    </style>
{% endblock stylesheet %}

{% form_theme form 'Form/form_layout.twig' %}

{% block main %}
<h1 class="page-heading">{{ 'plugin.front.product_review.review'|trans }}</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <p id="confirm_box__message">{{ 'plugin.front.product_review.confirm.page.remind'|trans|raw }}</p>

            <form method="post" action="{{ url('plugin_products_detail_review', { id : Product.id }) }}">
                {{ form_widget(form._token) }}
                <div class="dl_table">
                    <dl>
                        <dt><label>{{ 'plugin.front.product_review.product.name'|trans }}</label></dt>
                        <dd class="form-group">
                            {{ Product.name }}
                        </dd>
                    </dl>
                    <dl>
                        <dt>{{ form_label(form.reviewer_name) }}</dt>
                        <dd class="form-group">
                            {{ form_widget(form.reviewer_name) }}
                        </dd>
                    </dl>
                    <dl>
                        <dt>{{ form_label(form.reviewer_url) }}</dt>
                        <dd class="form-group">
                            {{ form_widget(form.reviewer_url) }}
                        </dd>
                    </dl>
                    <dl>
                        <dt>{{ form_label(form.recommend_level) }}</dt>
                        <dd class="form-group">
                            {{ form_widget(form.recommend_level) }}
                        </dd>
                    </dl>
                    <dl>
                        <dt>{{ form_label(form.sex) }}</dt>
                        <dd>
                            <div class="form-group form-inline">
                                {{ form_widget(form.sex) }}
                            </div>
                        </dd>
                    </dl>
                    <dl>
                        <dt>{{ form_label(form.title) }}</dt>
                        <dd class="form-group">
                            {{ form_widget(form.title) }}
                        </dd>
                    </dl>
                    <dl>
                        <dt>{{ form_label(form.comment) }}</dt>
                        <dd class="form-group">
                            {{ form_widget(form.comment) }}
                        </dd>
                    </dl>
                </div>

                <div class="row no-padding">
                    <div class="btn_group col-sm-offset-4 col-sm-4">
                        <p>
                            <button type="submit" class="btn btn-primary btn-block" name="mode" value="complete">{{ 'plugin.front.product_review.form.send'|trans }}</button>
                        </p>
                        <p>
                            <button type="submit" class="btn btn-info btn-block" name="mode" value="back">{{ 'plugin.front.product_review.form.back'|trans }}</button>
                        </p>
                    </div>
                </div>
            </form>
        </div><!-- /.col -->
    </div><!-- /.row -->
</div>
{% endblock %}

