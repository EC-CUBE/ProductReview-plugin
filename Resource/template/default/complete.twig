{% extends 'default_frame.twig' %}

{% set body_class = 'product_review_page' %}

{% block stylesheet %}
<style>
    .product_review_page p{
        display: block;
        -webkit-margin-before: 1em;
        -webkit-margin-after: 1em;
        -webkit-margin-start: 0px;
        -webkit-margin-end: 0px;
    }
    @media only screen and (min-width: 768px){
        .complete_message {
            text-align: center;
        }
        .complete_message .heading01 {
            font-size: 3.2rem;
        }
    }
    .product_review_page a.btn-info {
        color: #fff;
        background-color: #525263;
        border-color: #525263;
        padding: 10px 16px;
        font-weight: bold;
        height: 44px;
        border-radius: 0;
    }
</style>
{% endblock stylesheet %}

{% block main %}
<h1 class="page-heading">{{ 'plugin.product_review.front.review'|trans }}</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="container-fluid">
                <div id="deliveradd_input" class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <div class="complete_message">
                            <h2 class="heading01">{{ 'plugin.product_review.front.complete.thank.you'|trans }}</h2>
                            <p>{{ 'plugin.product_review.front.complete.message'|trans|raw }}</p>
                        </div>
                        <div class="row no-padding">
                            <div class="btn_group col-sm-offset-4 col-sm-4">
                                <p>
                                    <a href="{{ url('product_detail', {'id': id}) }}" class="btn btn-info btn-block">{{ 'plugin.product_review.front.complete.btn.return'|trans }}</a>
                                </p>
                            </div>
                        </div>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div>
        </div>
    </div>
</div>
{% endblock %}
