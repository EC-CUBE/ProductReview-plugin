{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['product', 'product_review'] %}

{% block title %}{{ 'plugin.admin.product.management.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'plugin.admin.product_review.edit.title.sub'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block main %}

    <form name="customer_form" role="form" id="customer_form" method="post"
          action="{{ url('plugin_admin_product_review_edit', { id : form.id.vars.value }) }}">
        {{ form_widget(form._token) }}
        {{ form_widget(form.id) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top"
                                         title="Tooltip">
                                    <span class="card-title">
                                        {{ 'plugin.admin.product_review.form.product'|trans }}
                                    </span>
                                        <i class="fa fa-question-circle fa-lg ml-1"></i>
                                    </div>
                                </div>
                                <div class="col-4 text-right">
                                    <a data-toggle="collapse" href="#basicConfig" aria-expanded="false"
                                       aria-controls="basicConfig">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="collapse show ec-cardCollapse" id="basicConfig">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <label class="control-label">{{ 'plugin.admin.product_review.form.product.name'|trans }}</label>
                                    </div>
                                    <div class="col">
                                        <div>{{ Product.name }}</div>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-3">
                                        <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip">
                                            <span>{{ 'plugin.admin.product_review.form.post.date'|trans }}</span>
                                            <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        </div>
                                    </div>
                                    <div class="col">
                                        {{ post_date|date('Y/m/d H:i') }}
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-3">
                                        <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip">
                                            <span>{{ 'plugin.admin.product_review.form.name.contributor'|trans }}</span>
                                            <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        </div>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.reviewer_name) }}
                                        {{ form_errors(form.reviewer_name) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip">
                                            <span>{{ 'plugin.admin.product_review.form.authorURL'|trans }}</span>
                                            <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        </div>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.reviewer_url) }}
                                        {{ form_errors(form.reviewer_url) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip">
                                            <span>{{ 'plugin.admin.product_review.form.sex'|trans }}</span>
                                            <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        </div>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.sex) }}
                                        {{ form_errors(form.sex) }}
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-3">
                                        <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip">
                                            <span>{{ 'plugin.admin.product_review.form.recommended.level'|trans }}</span>
                                            <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        </div>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.recommend_level) }}
                                        {{ form_errors(form.recommend_level) }}
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-3">
                                        <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip">
                                            <span>{{ 'plugin.admin.product_review.form.comment.title'|trans }}</span>
                                            <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        </div>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.title) }}
                                        {{ form_errors(form.title) }}
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-3">
                                        <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip">
                                            <span>{{ 'plugin.admin.product_review.form.comment.content'|trans }}</span>
                                            <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        </div>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.comment, {'attr': {'rows': '6'}}) }}
                                        {{ form_errors(form.comment) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-beseLink" href="{{ url('plugin_admin_product_review_page', { page_no : app.session.get('eccube.admin.product.search.page_no')|default('1') } ) }}?resume=1"
                               data-action="confirm"
                               title="{{ 'admin.product.product.text11'|trans({
                                   '%name%' : 'admin.product.product.title_product_screen'|trans })
                               }}"><i class="fa fa-backward" aria-hidden="true"></i><span>{{ 'plugin.admin.product_review.form.return.to.search.screen'|trans }}</span></a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                {{ form_widget(form.status) }}
                                {{ form_errors(form.status) }}
                            </div>
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" type="submit">{{ 'admin.product.product.510'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

{% endblock %}
